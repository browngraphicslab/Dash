<UserControl
    x:Class="Dash.SearchMenuFlyout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dash"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <AutoSuggestBox x:Name="xSearch" Background="Transparent" QueryIcon="Find" BorderBrush="Transparent" BorderThickness="0" Margin="15,20,15,10" PlaceholderText="Search" TextChanged="XSearch_OnTextChanged">
            <AutoSuggestBox.ContextFlyout>
                <MenuFlyout x:Name="xMenuFlyout" Closed="XMenuFlyout_OnClosed">
                </MenuFlyout>
            </AutoSuggestBox.ContextFlyout>
        </AutoSuggestBox>

    </Grid>
</UserControl>
