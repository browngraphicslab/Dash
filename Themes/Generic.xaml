<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dash">
    <Style TargetType="local:WindowTemplate">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:WindowTemplate">
                    <Grid x:Name="PART_Container" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="White">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!--window chrome-->
                        <Rectangle x:Name="PART_Header" Fill="White"
                                   VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
                        <Button x:Name="PART_CloseButton" Width="30" Height="30"
                                   VerticalAlignment="Stretch" HorizontalAlignment="Right" Grid.Row="0">
                            <TextBlock Text="&#xE8BB;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" IsHitTestVisible="False"/>
                        </Button>

                        <!--window content-->
                        <ContentControl x:Name="PART_InnerContent" Content="{TemplateBinding InnerContent}" 
                                        HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Grid.Row="1"/>

                        <Border BorderBrush="Black" BorderThickness="1,0,1,1" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></Border>

                        <!--resizer-->
                        <Ellipse x:Name="PART_Resizer" Width="30" Height="30" Fill="#DE0074FF"
                                   VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.Row="1" Margin="1"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="local:EditableFieldFrame">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:EditableFieldFrame">
                    <Grid Width="Auto" Height="Auto">
                        <Border x:Name="PART_Container"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">

                            <!--editable content-->
                            <ContentControl x:Name="PART_EditableContent" Content="{TemplateBinding EditableContent}"
                                            HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"/>


                        </Border>
                        <Canvas x:Name="PART_OverlayCanvas"></Canvas>
                    </Grid>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
