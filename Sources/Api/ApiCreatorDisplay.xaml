<UserControl
    x:Class="Dash.Sources.Api.ApiCreatorDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dash"
    xmlns:api="using:Dash.Sources.Api.XAML_Elements"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="400"
    d:DesignWidth="470">
    <Grid x:Name="xGrid">
    <StackPanel Padding="20" x:Name="xApiSourceCreatorPanel" Background="Transparent" Width="470" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0">
        <TextBlock Text="HTTP API Builder" HorizontalAlignment="Center" Style="{StaticResource xTitleStyle}" FontWeight="Normal"/>
        <StackPanel Orientation="Vertical" >
            <StackPanel Name="xTopAPIURL" Orientation="Horizontal" Margin="0,0,0,15">
                <ComboBox x:Name="requestTypePicker" HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Width="77" SelectedIndex="0">
                    <ComboBoxItem Content="GET"/>
                    <ComboBoxItem Content="POST"/>
                </ComboBox>
                    <TextBox TextChanged="xApiURLTB_TextChanged" x:Name="xApiURLTB" Height="25" Width="345" Margin="3,0,0,0"  TextWrapping="Wrap" PlaceholderText="API address, e.g. https://itunes.apple.com/search"  BorderBrush="#FF474747"  />
            </StackPanel>
            <api:ApiCreatorAuthenticationDisplay x:Name="xAuthControl" Margin="0,0,0,12" />
            <api:ApiCreatorPropertyGenerator x:Name="xHeaderControl" Margin="0,0,0,12" TitleTag="HEADERS" Loaded="xHeaderControl_Loaded" ></api:ApiCreatorPropertyGenerator>
            <api:ApiCreatorPropertyGenerator x:Name="xParameterControl" TitleTag="PARAMETERS" ></api:ApiCreatorPropertyGenerator>

            <Button x:Name="createAPIBtn" Click="createAPINodeTemplate" Content="MAKE API" HorizontalAlignment="Center" Margin="0,20,0,0" Foreground="White" Background="#FF0078D7"/>
        </StackPanel>
    </StackPanel>
        </Grid>
</UserControl>