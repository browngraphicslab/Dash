                    <SolidColorBrush x:Key="CollectionBorderBrush" Color="Red"></SolidColorBrush>
                    <SolidColorBrush x:Key="DBCollectionBrush" Color="Red"></SolidColorBrush>
                    <SolidColorBrush x:Key="DBTextBrush" Color="Red"></SolidColorBrush>
                    <SolidColorBrush x:Key="WorkspaceButtonBrush" Color="Red"></SolidColorBrush>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
  
  