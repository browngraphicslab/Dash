                    <SolidColorBrush x:Key="TreeviewBrush" Color="#353f3f"></SolidColorBrush>
                    <SolidColorBrush x:Key="CollectionBorderBrush" Color="#565656"></SolidColorBrush>
                    <SolidColorBrush x:Key="DBCollectionBrush" Color="#8e8e8e"></SolidColorBrush>
                    <SolidColorBrush x:Key="DBTextBrush" Color="#e1eded"></SolidColorBrush>
                    <SolidColorBrush x:Key="WorkspaceButtonBrush" Color="#2a4a63"></SolidColorBrush>
                </ResourceDictionary>
                <ResourceDictionary x:Key="RedAF">
                    <SolidColorBrush x:Key="TextBrush" Color="Red" />
                    <SolidColorBrush x:Key="CollectionBackgroundBrush" Color="Red"></SolidColorBrush>
                    <SolidColorBrush x:Key="GridSplitterBrush" Color="Red"></SolidColorBrush>
