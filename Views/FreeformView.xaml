<UserControl
    x:Class="Dash.FreeformView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dash"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400" SizeChanged="UserControl_SizeChanged"
    Name="XControl">

    <Canvas x:Name="XCanvas" HorizontalAlignment="Stretch" Width="{Binding CanvasWidth}" 
            Margin="0,0,-0,-0" Height="{Binding CanvasHeight}" VerticalAlignment="Stretch" 
            ManipulationMode="All" PointerWheelChanged="UserControl_PointerWheelChanged" 
            ManipulationInertiaStarting="UserControl_ManipulationInertiaStarting" 
            ManipulationDelta="UserControl_ManipulationDelta">
        <Canvas.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Red" Offset="0"/>
                <GradientStop Color="#FFC1C1C1" Offset="1"/>
            </LinearGradientBrush>
        </Canvas.Background>

        <InkCanvas x:Name="XInkCanvas" HorizontalAlignment="Left" Height="{Binding CanvasHeight}" VerticalAlignment="Top" Width="{Binding CanvasWidth}" />
    </Canvas>
</UserControl>
