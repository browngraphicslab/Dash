<UserControl
    x:Class="Dash.MainSearchBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dash="using:Dash"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border x:Name="xCollectionDragBorder" Grid.Column="0" Grid.Row="0" Background="Transparent" DragStarting="XCollDragIcon_OnDragStarting" CanDrag="True">
            <TextBlock x:Name="xCollDragIcon" 
                       FontFamily="{StaticResource FontAwesome}" 
                       Foreground="{StaticResource TitleText}" 
                       FontSize="{StaticResource DefaultFontSize}" 
                       Text="{StaticResource CollectionIcon}" 
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Center"
            />
        </Border>
        <FontIcon x:Name="xArrow" FontFamily="Segoe MDL2 Assets" Glyph="&#xE937;" Grid.Column="1" Grid.Row="0"
           FontSize="12" Tapped="XArrowBlock_OnTapped" />

        <AutoSuggestBox PlaceholderText="Search" QueryIcon="Find"
                    TextChanged="AutoSuggestBox_TextChanged"
                    SuggestionChosen="AutoSuggestBox_SuggestionChosen"
                    QuerySubmitted="AutoSuggestBox_QuerySubmitted"
                    UpdateTextOnSelect="False"
                    Name="xAutoSuggestBox"
                    GotFocus="XAutoSuggestBox_OnGotFocus"
                    TextBoxStyle="{StaticResource AutoFontSize}"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    DragEnter="XAutoSuggestBox_OnDragEnter"
                    Drop="XAutoSuggestBox_OnDrop"
                    Grid.Column="2"
                    Grid.Row="0"
                    AllowDrop="True">
            <AutoSuggestBox.ItemTemplate>

                <DataTemplate x:DataType="dash:SearchResultViewModel">
                    <Grid PointerEntered="Grid_PointerEntered" PointerExited="Grid_PointerExited" 
                          CanDrag="True" DragStarting="SearchResult_OnDragStarting">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock 
                            x:Name="xCollDragIcon"
                            Grid.Column="0"
                            FontFamily="{StaticResource FontAwesome}"
                            Foreground="{StaticResource TitleText}"
                            FontSize="15"
                            Text="{StaticResource DocumentIcon}"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Height="32"
                            Width="32"
                            Margin="3, 15, 0, 0"
                            PointerWheelChanged="DocIcon_OnPointerWheelChanged"/>
                        <TextBlock x:Name="xNumFields"
                            Grid.Column="0"
                            FontFamily="{StaticResource FontAwesome}"
                            Foreground="{StaticResource TitleText}"
                            FontSize="10"
                            Text="{Binding FieldCount}"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Height="32"
                            Width="35"
                            Margin="20, 32, 0, 0"/>
                        <TextBlock x:Name="xFieldNum"
                            Grid.Column="0"
                            FontFamily="{StaticResource FontAwesome}"
                            Foreground="{StaticResource TitleText}"
                            FontSize="10"
                            Text="{Binding CurrentIndex}"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Height="32"
                            Width="35"
                            Margin="20, 11, 0, 0"/>
                        <StackPanel Orientation="Vertical" Margin="6, 9, 0, 0" Grid.Column="1">
                            <TextBlock Text="{Binding CurrentTitle}" FontWeight="Medium"></TextBlock>
                            <TextBlock Text="{Binding CurrentContext}"></TextBlock>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </AutoSuggestBox.ItemTemplate>
        </AutoSuggestBox>

        <Grid x:Name="xSearchCodeBox" Visibility="Collapsed" BorderThickness="1.5" BorderBrush="Gray" Grid.Column="2" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="235"></ColumnDefinition>
                <ColumnDefinition Width="15"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <FontIcon x:Name="xDragScript" FontFamily="Segoe MDL2 Assets" Glyph="&#xE70F;" Grid.Column="1"
                          FontSize="12" CanDrag="True" DragStarting="XSearchCode_OnDragStarting" Tapped="XDragScript_OnTapped" />
            <TextBox x:Name="xSearchCode" PlaceholderText="Run on each doc" Grid.Column="0" Background="White" BorderThickness="0"
                        CanDrag="True"  KeyUp="XSearchCode_OnKeyUp" DragStarting="XSearchCode_OnDragStarting" ></TextBox>
        </Grid>
    </Grid>
</UserControl>
