<UserControl
    x:Class="Dash.Views.TemplateEditor.MyUserControl1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dash.Views.TemplateEditor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>

        <CommandBar x:Name="xToolbar"  IsOpen="True">

            <AppBarButton x:Name="xAddImage" Icon="BrowsePhotos" Label="+ Image"/>
            <AppBarButton x:Name="xAddText" Icon="Rename" Label="+ Text"/>
            <AppBarButton x:Name="xAddVideo" Icon="Video" Label="+ Video" />
            <AppBarButton x:Name="xAddAudio" Icon="Audio" Label="+ Audio" />

        </CommandBar>

      
    </Grid>
</UserControl>
