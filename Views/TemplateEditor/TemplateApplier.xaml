            <StackPanel x:Name="xButtons" Orientation="Horizontal" HorizontalAlignment="Center">

           
            <StackPanel x:Name="xApply" Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Bottom">

                <Button Height="40" Width="170" Background="#334f43" Click="XApply_OnClick">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock  FontSize="14" Foreground="White" Text="Apply"></TextBlock>
                        <TextBlock FontSize="18" Foreground="White"
                                   FontFamily="{StaticResource FontAwesome}" Text="&#xf00c;"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <StackPanel x:Name="xDelete" Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Bottom">

