                            VerticalAlignment="Top"
                            AllowDrop="True"/>
            <ListView x:Name="xListView" Width="230" RelativePanel.Below="xSearchBox" Margin="0 10 0 0"  ItemsSource="{x:Bind TemplateRecords}">
