<UserControl
    x:Class="Dash.CollectionView"
    x:Name="Control"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dash="using:Dash"
    mc:Ignorable="d"
    d:DesignHeight="400"
    d:DesignWidth="670"
    d:DataContext="{d:DesignInstance dash:CollectionViewModel}"
    PointerWheelChanged="UserControl_PointerWheelChanged"
    ManipulationDelta="UserControl_ManipulationDelta"
    ManipulationInertiaStarting="UserControl_ManipulationInertiaStarting"
    Tapped="CollectionView_OnTapped">

    <Grid x:Name="xOuterGrid" BorderThickness="3">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="xMenuColumn" Width="0"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <!-- Options Menu-->
            <Canvas x:Name="xMenuCanvas" Background="{StaticResource TranslucentWhite}"></Canvas>
            
            <!-- Collectionview Content-->
            <Grid x:Name="Grid" SizeChanged="Grid_SizeChanged" BorderThickness="0" Grid.Column="1" Background="Transparent" Padding="0">
                <Grid x:Name="DocumentViewContainerGrid"
                  AllowDrop="True"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  ManipulationMode="All"
                  Padding="0"
                  SizeChanged="DocumentViewContainerGrid_OnSizeChanged">
                    <Grid.Clip>
                        <RectangleGeometry x:Name="ClipRect"></RectangleGeometry>
                    </Grid.Clip>
                    <Image x:Name="xTileSource" Source="ms-appx:///Assets/gridbg.png" Visibility="Collapsed" Stretch="None"></Image>
                    <Canvas x:Name="xBackgroundTileContainer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></Canvas>
                    <InkCanvas x:Name="xInkCanvas" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"></InkCanvas>
                    <ContentControl x:Name="xContentControl"></ContentControl>
                </Grid>
                <Ellipse x:Name="ConnectionEllipse"
                     x:FieldModifier="public"
                     Style="{StaticResource xLinkHandle}"
                     HorizontalAlignment="Right"
                     PointerPressed="ConnectionEllipse_OnPointerPressed"
                     PointerReleased="ConnectionEllipse_OnPointerReleased">
                </Ellipse>
            </Grid>
        </Grid>
    </Grid>
        
</UserControl>



