<UserControl
    x:Class="Dash.CollectionView"
    x:Name="Control"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dash="using:Dash"
    mc:Ignorable="d"
    d:DesignHeight="400"
    d:DesignWidth="670"
    d:DataContext="{d:DesignInstance dash:CollectionViewModel}"
    ManipulationMode="All">
    <Grid x:Name="xOuterGrid" BorderThickness="3">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="xMenuColumn" Width="0"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <!-- Options Menu-->
            <Canvas x:Name="xMenuCanvas"/>

            <!-- Collectionview Content-->
            <Grid Grid.Column="1" Background="{StaticResource CollectionViewBackground}">
                <Grid Margin="100">
                    <Grid x:Name="DocumentViewContainerGrid" 
                          AllowDrop="True"
                          HorizontalAlignment="Stretch"
                          Margin="5,5,5,5"
                          VerticalAlignment="Stretch"
                          ManipulationMode="All"
                    >
                        <ContentControl x:Name="xContentControl" Loaded="xContentControl_Loaded" 
                                        HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"/>
                    </Grid>
                    <Grid HorizontalAlignment="Right" 
                          PointerPressed="ConnectionEllipse_OnPointerPressed"
                          PointerReleased="ConnectionEllipse_OnPointerReleased"
                          ManipulationStarted="ConnectionEllipse_OnManipulationStarted"
                          Width="50" Height="50" Background="Transparent"
                          ManipulationMode="None">
                        <Ellipse x:Name="ConnectionEllipse"
                                 x:FieldModifier="public"
                                 Style="{StaticResource xLinkHandle}"
                                 VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,-15,0"/>
                    </Grid>
                    <Grid HorizontalAlignment="Left" 
                          PointerPressed="ConnectionEllipseInput_OnPointerPressed"
                          PointerReleased="ConnectionEllipseInput_OnPointerReleased"
                          ManipulationStarted="ConnectionEllipseInput_OnManipulationStarted"
                          Width="50" Height="50" Background="Transparent"
                          ManipulationMode="None">
                        <Ellipse x:Name="ConnectionEllipseInput"
                                 x:FieldModifier="public"
                                 Style="{StaticResource xLinkHandle}"
                                 VerticalAlignment="Center" HorizontalAlignment="Left" Margin="-12,0,0,0"/>
                    </Grid>
                </Grid>
                
            </Grid>
        </Grid>
    </Grid>

</UserControl>