<dash:SelectionElement
    x:Class="Dash.CollectionView"
    x:Name="Control"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dash="using:Dash"
    mc:Ignorable="d"
    d:DesignHeight="400"
    d:DesignWidth="670"
    d:DataContext="{d:DesignInstance dash:CollectionViewModel}"
    ManipulationMode="All"
    Loaded="CollectionView_Loaded"
    Tapped="CollectionView_Tapped">
    <Grid x:Name="xOuterGrid" BorderThickness="3">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="xMenuColumn" Width="0"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <!-- Options Menu-->
            <Canvas x:Name="xMenuCanvas"/>

            <!-- Collectionview Content-->
            <Grid Grid.Column="1" Background="{StaticResource CollectionViewBackground}">
                <Grid x:Name="DocumentViewContainerGrid"
                      AllowDrop="True"
                      HorizontalAlignment="Stretch"
                      Margin="5,5,5,5"
                      VerticalAlignment="Stretch"
                      ManipulationMode="All"
                      DragOver="CollectionGrid_DragOver"
                      Drop="CollectionGrid_Drop">
                    <ContentControl x:Name="xContentControl" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"/>
                </Grid>
                <Ellipse x:Name="ConnectionEllipse"
                         x:FieldModifier="public"
                         Style="{StaticResource xLinkHandle}"
                         HorizontalAlignment="Right"
                         PointerPressed="ConnectionEllipse_OnPointerPressed"
                         PointerReleased="ConnectionEllipse_OnPointerReleased"
                         ManipulationStarted="ConnectionEllipse_OnManipulationStarted"/>
            </Grid>
        </Grid>
    </Grid>

</dash:SelectionElement>