<dash:SelectionElement
    x:Class="Dash.CollectionView"
    x:Name="Control"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dash="using:Dash"
    mc:Ignorable="d"
    d:DesignHeight="400"
    d:DesignWidth="670"
    d:DataContext="{d:DesignInstance dash:CollectionViewModel}"
    ManipulationMode="All"
    ManipulationDelta="CollectionView_OnManipulationDelta"
    PointerWheelChanged="CollectionView_OnPointerWheelChanged"
    RightTapped="CollectionView_OnRightTapped">
    <Grid x:Name="xOuterGrid" BorderThickness="3">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="xMenuColumn" Width="0"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!-- Options Menu-->
            <Canvas x:Name="xMenuCanvas"/>

            <!-- Collectionview Content-->
            <Grid x:Name="Grid" x:FieldModifier="public" BorderThickness="0" Grid.Column="1"
                  Background="{StaticResource CollectionViewBackground}" Padding="0" SizeChanged="Grid_SizeChanged">
                <Canvas x:Name="xBackgroundTileContainer" />
                <Image x:Name="xTileSource" Source="ms-appx:///Assets/gridbg.png" Visibility="Collapsed" Stretch="None"/>
                <Grid x:Name="DocumentViewContainerGrid"
                      Background="Transparent"
                      AllowDrop="True"
                      HorizontalAlignment="Stretch"
                      Margin="5,5,5,5"
                      VerticalAlignment="Stretch"
                      ManipulationMode="All"
                      Padding="0"
                      SizeChanged="DocumentViewContainerGrid_OnSizeChanged">
                    <Grid.Clip>
                        <RectangleGeometry x:Name="ClipRect" />
                    </Grid.Clip>
                    <ContentControl x:Name="xContentControl"/>
                </Grid>
                <Ellipse x:Name="ConnectionEllipse"
                         x:FieldModifier="public"
                         Style="{StaticResource xLinkHandle}"
                         HorizontalAlignment="Right"
                         PointerPressed="ConnectionEllipse_OnPointerPressed"
                         PointerReleased="ConnectionEllipse_OnPointerReleased" />
                <Grid.Clip>
                    <RectangleGeometry x:Name="xBackgroundClip"></RectangleGeometry>
                </Grid.Clip>
            </Grid>
        </Grid>
    </Grid>

</dash:SelectionElement>