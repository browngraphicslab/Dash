<UserControl
    x:Class="Dash.CollectionView"
    x:Name="Control"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dash="using:Dash"
    mc:Ignorable="d"
    d:DesignHeight="400"
    d:DesignWidth="670"
    d:DataContext="{d:DesignInstance dash:CollectionViewModel}"
    Background="{StaticResource TranslucentWhite}">

    <Grid>
        <Grid Background="{StaticResource AccentGreen}" Height="30" VerticalAlignment="Top" HorizontalAlignment="Stretch">
            <Button x:Name="CloseButton" 
                Content ="X" 
                Width="30"                  
                HorizontalAlignment="Right" 
                VerticalAlignment="Stretch"/>
            <Button x:Name="DisplayButton" 
                HorizontalAlignment="Left" 
                Margin="20,0,0,0"
                    Style="{StaticResource xAccentButtonStyle}"
                VerticalAlignment="Top"  
                Content="Display" >
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem x:Name="GridViewOption" Text="Grid"/>
                        <MenuFlyoutItem x:Name="FreeformOption" Text="Freeform"/>
                        <MenuFlyoutItem x:Name="ListOption" Text="List"/>
                    </MenuFlyout>
                </Button.Flyout>
            </Button>
        </Grid>
        <Grid x:Name="Grid" BorderThickness="0" Margin="0,30,0,0" Style="{StaticResource xNodeContainerGrid}" Padding="0">
            <Grid x:Name="DocumentViewContainerGrid"
                  AllowDrop="True"
                  HorizontalAlignment="Stretch" 
                  Margin="0,0,0,30" 
                  VerticalAlignment="Stretch"   
                  BorderBrush="LightGray"
                  ManipulationMode="All" 
                  Padding="0"
                  Style="{StaticResource xNodeContainerGrid}">
                <InkCanvas x:Name="xInkCanvas" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"></InkCanvas>
                <ContentControl x:Name="xDocumentDisplayView" Content="{Binding DocumentDisplayView}"></ContentControl>
            </Grid>
            
            <StackPanel Orientation="Horizontal"  VerticalAlignment="Bottom">
                <Button x:Name="DeleteButton" x:FieldModifier="public" Content="Options" VerticalAlignment="Top" Height="30" 
                        Width="70" Foreground="WhiteSmoke" Margin="10 0 0 0" FontSize="14" FontFamily="Rockwell">
                    <Button.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem x:Name="DeleteSelected" Text="Delete"/>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
                <Button x:Name="SelectButton" 
                    Content ="Select" 
                    VerticalAlignment="Top" 
                    Height="30" 
                    Width="70" 
                    Foreground="WhiteSmoke" 
                    Margin="10,0,0,0" 
                    FontSize="14" 
                    FontFamily="Rockwell"/>
            </StackPanel>
            <Ellipse x:Name="ConnectionEllipse"
                 x:FieldModifier="public"
                 Width="20" 
                 Height="20" 
                 Fill="Goldenrod" 
                 HorizontalAlignment="Right" 
                 StrokeThickness="2" 
                 Stroke="DarkGoldenrod"
                 ManipulationMode="All"></Ellipse>
        </Grid>
    </Grid>
</UserControl>



