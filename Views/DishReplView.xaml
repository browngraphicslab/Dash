<UserControl
    x:Class="Dash.DishReplView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dash"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    x:Name="Control">


    <Border BorderBrush="Black" BorderThickness="1">
        <Grid VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <ScrollViewer Name="xScrollViewer" VerticalAlignment="Stretch" VerticalScrollMode="Enabled" 
                              HorizontalScrollMode="Disabled" IsVerticalRailEnabled="True"  
                          Margin="5" Foreground="White" Background="Black">
                <ItemsControl VerticalAlignment="Stretch" Grid.Row="0"  ItemsSource="{Binding Items}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,0,0,5" DragStarting="UIElement_OnDragStarting" CanDrag="True" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="{Binding LineText}" TextWrapping="Wrap" />
                                <TextBlock Grid.Row="1" Text="{Binding LineValueText}" TextWrapping="Wrap" />
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            <TextBox Name="xTextBox" Grid.Row="1" Height="50" Background="White" FontSize="18"
                            PlaceholderText="Enter Command" 
                TextChanged="XTextBox_OnTextChanged" AcceptsReturn="true">
            </TextBox>
            <Popup x:Name="SuggestionsPopup" Grid.Row="1" Canvas.ZIndex="-1"  VerticalOffset="50" >
                <ScrollViewer VerticalAlignment="Stretch" VerticalScrollMode="Enabled" 
                              HorizontalScrollMode="Disabled" IsVerticalRailEnabled="True" HorizontalAlignment="Stretch" Width="{Binding ElementName=Control, Path=Width}" >
                    <Border x:Name="SuggestionsContainer" Background="LightGray">
                    <Border.RenderTransform>
                        <TranslateTransform x:Name="UpwardTransform"/>
                    </Border.RenderTransform>
                    <ListView x:Name="Suggestions" IsItemClickEnabled="True" ItemClick="Suggestions_OnItemClick" MaxHeight="200">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Border Height="40">
                                        <TextBlock Text="{Binding}" 
                                           FontSize="15" Foreground="Black"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemContainerTransitions>
                            <TransitionCollection />
                        </ListView.ItemContainerTransitions>
                    </ListView>
                </Border>
                </ScrollViewer>
            </Popup>

        </Grid>
    </Border>

</UserControl>
