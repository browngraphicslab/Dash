<UserControl
    x:Class="Dash.DishReplView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dash"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    x:Name="Control">

    <Grid>
        <Border x:Name="xScriptRepl" BorderBrush="Black" BorderThickness="1">
            <Grid VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="50" x:Name="TextGrid" />
                </Grid.RowDefinitions>
                <CommandBar x:Name="xToolbar" IsSticky="True" IsOpen="False" OverflowButtonVisibility="Collapsed" 
                            Grid.Row="0" Background="{ThemeResource TreeviewBrush}" >
                    <AppBarButton x:Name="xScript"  Icon="Switch"  Label="Switch" Click="XScript_OnClick"></AppBarButton>
                </CommandBar>
                <ScrollViewer Name="xScrollViewer" VerticalAlignment="Stretch" VerticalScrollMode="Enabled" 
                              HorizontalScrollMode="Disabled" IsVerticalRailEnabled="True"  
                          Margin="5" Foreground="White" Background="#232625" Grid.Row="1">
                    <ItemsControl VerticalAlignment="Stretch"  ItemsSource="{Binding Items}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,5" DragStarting="UIElement_OnDragStarting" CanDrag="True" >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="30"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock x:Name="xInputArrow" Text=">>" Grid.Column="0" Tapped="XInputArrow_OnTapped" />
                                        <TextBlock x:Name="xInputBlock" Grid.Column="1" Text="{Binding LineText}" TextWrapping="Wrap" Visibility ="{Binding NotEditTextValue, Mode=OneWay}"  
                                                   DoubleTapped="XInputBlock_OnDoubleTapped" Tapped="XInputBlock_OnTapped" />
                                        <TextBox x:Name="xInputBox" Grid.Column="1" Text="{Binding LineText}"  Visibility ="{Binding EditTextValue, Mode=OneWay}" 
                                                 Background="Azure" Foreground="Black" LostFocus="XInputBox_OnLostFocus" KeyUp="XInputBox_OnKeyUp"  />
                                    </Grid>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="30"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text=" " Grid.Column="0" />
                                        <local:ReplLineNode Grid.Column="1"></local:ReplLineNode>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                <TextBox Name="xTextBox" Grid.Row="2" Height="{x:Bind TextHeight, Mode=OneWay}" Background="White" FontSize="18"
                            PlaceholderText="Enter Command"  GettingFocus="XTextBox_OnGettingFocus"
                TextChanged="XTextBox_OnTextChanged" AcceptsReturn="true" IsSpellCheckEnabled="False">
                </TextBox>
                <Popup x:Name="xSuggestionsPopup" Grid.Row="2" Canvas.ZIndex="-1"  VerticalOffset="{x:Bind TextHeight, Mode=OneWay}" >
                    <ScrollViewer VerticalAlignment="Stretch" VerticalScrollMode="Enabled" 
                              HorizontalScrollMode="Disabled" IsVerticalRailEnabled="True" HorizontalAlignment="Stretch" Width="{Binding ElementName=Control, Path=Width}" >
                        <Border x:Name="xSuggestionsContainer" Background="LightGray">
                            <Border.RenderTransform>
                                <TranslateTransform x:Name="xUpwardTransform"/>
                            </Border.RenderTransform>
                            <ListView x:Name="xSuggestions" IsItemClickEnabled="True" ItemClick="Suggestions_OnItemClick" MaxHeight="200">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Border Height="40">
                                                <TextBlock Text="{Binding}" 
                                           FontSize="15" Foreground="Black"/>
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                                <ListView.ItemContainerTransitions>
                                    <TransitionCollection />
                                </ListView.ItemContainerTransitions>
                            </ListView>
                        </Border>
                    </ScrollViewer>
                </Popup>

            </Grid>
        </Border>
    </Grid>

</UserControl>
