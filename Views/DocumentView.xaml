<UserControl
    x:Class="Dash.DocumentView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dash"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="300"
    Width="{x:Bind ViewModel.Width}" 
    Height="{x:Bind ViewModel.Height}"
    d:DataContext="{d:DesignInstance local:DocumentViewModel }"
   >
    <!--  Width="{Binding Width}" Height="{Binding Height}" add back in when done designing-->

    <Grid x:Name="OuterGrid"
          x:FieldModifier="public"
            BorderBrush="{Binding BorderBrush}"
            BorderThickness="0">
        <Grid x:Name="XGrid"
            SizeChanged="OuterGrid_SizeChanged"
                ManipulationMode="{Binding ManipulationMode}"
                Padding="0"
                Style="{StaticResource xNodeContainerGrid}" Background="#E5FFFFFF" >

            <Grid.Clip>
                <RectangleGeometry x:Name="ClipRect" Rect="0,0,300,300" />
            </Grid.Clip>
            <!-- This controls the fields of the document -->
            <ItemsControl x:Name="DocumentsControl"
                          x:FieldModifier="public"
                          Padding="5">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas x:Name="DocumentsCanvas" x:FieldModifier="public"></Canvas>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </Grid>
        <Button x:Name="DraggerButton" 
                x:FieldModifier="public"
                Background="Black"
                Margin="0,0,-10,-10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom" 
                ManipulationMode="TranslateX, TranslateY"
                Visibility="{Binding IsDetailedUserInterfaceVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                >
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Padding="10" Background="Transparent">
                        <Image Source="ms-appx:///Assets/resizehandle.png" Height="20" Margin="0,0,0,0" Stretch="None" HorizontalAlignment="Right" VerticalAlignment="Bottom"></Image>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="xEditButton" 
                Width="35"
                Height="35"
                HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Tapped="XEditButton_OnTapped" Visibility="{Binding IsDetailedUserInterfaceVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Text="&#xE7C3;" FontFamily="Segoe MDL2 Assets" />
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Ellipse Fill="#DE0074FF" StrokeThickness="1" Stroke="#DE0074FF" />
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</UserControl>







