<UserControl
    x:Class="Dash.DocumentView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dash"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="300"
    PointerPressed="DocumentView_OnPointerPressed">

    <Grid x:Name="OuterGrid"
          x:FieldModifier="public"
          SizeChanged="OuterGrid_SizeChanged"
          BorderBrush="{Binding BorderBrush}" 
          BorderThickness ="5">
        <Grid.Clip>
            <RectangleGeometry x:Name="ClipRect"/>
        </Grid.Clip>
        <Grid x:Name="XGrid"
              x:FieldModifier="public"
              ManipulationMode="{Binding ManipulationMode}" 
              Padding="0"            
              RightTapped="Grid_RightTapped" 
              Background="#BFFFFFFF"></Grid>
        <Button x:Name="DraggerButton" 
                x:FieldModifier="public" 
                Width="20"
                Height="20" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Bottom" 
                ManipulationMode="All">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Ellipse Fill="#DE0074FF" StrokeThickness="1" Stroke="#DE0074FF" />
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</UserControl>
