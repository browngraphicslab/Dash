<UserControl
    x:Class="Dash.InkSettingsPane"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dash"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:inking="using:Windows.UI.Input.Inking"
    xmlns:generic="using:System.Collections.Generic"
    xmlns:objectModel="using:System.Collections.ObjectModel"
    mc:Ignorable="d"
    d:DesignHeight="250" d:DesignWidth="160">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"></ColumnDefinition>
            <ColumnDefinition Width="5"></ColumnDefinition>
            <ColumnDefinition Width="50"></ColumnDefinition>
            <ColumnDefinition x:Name="Column3" Width="5"></ColumnDefinition>
            <ColumnDefinition x:Name="Column4" Width="50"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="200"></RowDefinition>
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="1" Grid.Column="0" Fill="{StaticResource TranslucentWhite}" RadiusY="7.5" RadiusX="7.5" Stroke="DarkGray" Margin="0,0,0,-10"></Rectangle>
        <SymbolIcon Symbol="{x:Bind BrightnessSymbol}" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" Margin="0,20,0,0"></SymbolIcon>
        <Slider x:Name="BrightnessSlider" Grid.Row="1" Grid.Column="0" Orientation="Vertical" Margin="6,50,0,10" TickPlacement="None" Minimum="0" Maximum="100" ValueChanged="BrightnessSlider_OnValueChanged" StepFrequency="1"></Slider>
        <Rectangle Grid.Row="1" Grid.Column="2" Fill="{StaticResource TranslucentWhite}" RadiusY="7.5" RadiusX="7.5" Stroke="DarkGray" Margin="0,0,0,-10"></Rectangle>
        <SymbolIcon Symbol="{x:Bind SizeSymbol}" Grid.Row="1" Grid.Column="2" VerticalAlignment="Top" Margin="0,20,0,0"></SymbolIcon>
        <Slider x:Name="SizeSlider" Grid.Row="1" Grid.Column="2" Orientation="Vertical" Margin="6,50,0,10" TickPlacement="None" Minimum="0.5" Maximum="30" ValueChanged="SizeSlider_OnValueChanged"></Slider>
        <Rectangle Grid.Row="1" Grid.Column="4" Fill="{StaticResource TranslucentWhite}" RadiusY="7.5" RadiusX="7.5" Stroke="DarkGray" Margin="0,0,0,-10"></Rectangle>
        <SymbolIcon Symbol="{x:Bind OpacitySymbol}" Grid.Row="1" Grid.Column="4" VerticalAlignment="Top" Margin="0,20,0,0"></SymbolIcon>
        <Slider x:Name="OpacitySlider" Grid.Row="1" Grid.Column="4" Orientation="Vertical" Margin="6,50,0,10" TickPlacement="None" Minimum="0" Maximum="100" ValueChanged="OpacitySlider_OnValueChanged" StepFrequency="1"></Slider>
        <Grid Grid.Column="0" Grid.ColumnSpan="5" Grid.Row="0" BorderThickness="1" VerticalAlignment="Top" HorizontalAlignment="Center" Width="150" Height="45">
            <InkCanvas x:Name="XInkCanvas" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"></InkCanvas>
        </Grid>
