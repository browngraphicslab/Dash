<UserControl
    x:Class="Dash.InkSettingsPane"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dash"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="294" d:DesignWidth="309">


    <Grid Width="309" Height="294">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="279"></ColumnDefinition>
            <ColumnDefinition Width="30"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15"></RowDefinition>
            <RowDefinition Height="279"></RowDefinition>
        </Grid.RowDefinitions>
        <InkCanvas x:Name="XInkCanvas" Grid.Row="0" Grid.Column="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.RowSpan="2" Margin="-5,-10,189,189" IsHitTestVisible="False"/>
        <local:RadialColorPicker Grid.Column="0" Grid.Row="1"></local:RadialColorPicker>
        <local:RadialMenuSlider x:Name="SizeSlider" Grid.Row="1" Width="200" StartAngle="30"
                                    Angle="30"
                                    InnerRadius="139.5" Thickness="30" Margin="139.5,-15,0,0" Grid.Column="0"
                                    Grid.ColumnSpan="2" ValueChanged="SizeSlider_OnValueChanged" MinValue="2" MaxValue="30" Symbol="{x:Bind SizeSymbol}">
        </local:RadialMenuSlider>
        <local:RadialMenuSlider x:Name="BrightnessSlider" Grid.Row="1" StartAngle="72.5"
                                    Angle="30"
                                    InnerRadius="139.5" Thickness="30" Margin="139.5,-15,0,0" Grid.Column="0"
                                    Grid.ColumnSpan="2" ValueChanged="BrightnessSlider_OnValueChanged" MinValue="0" MaxValue="100" Symbol="{x:Bind BrightnessSymbol}">
        </local:RadialMenuSlider>
        <local:RadialMenuSlider x:Name="OpacitySlider" Grid.Row="1" Grid.RowSpan="2" Width="200" StartAngle="115"
                                    Angle="30"
                                    InnerRadius="139.5" Thickness="30" Margin="139.5,-15,0,-6" Grid.Column="0"
                                    Grid.ColumnSpan="2" ValueChanged="OpacitySlider_OnValueChanged" MinValue="0" MaxValue="100" Symbol="{x:Bind OpacitySymbol}">
        </local:RadialMenuSlider>
    </Grid>

</UserControl>



