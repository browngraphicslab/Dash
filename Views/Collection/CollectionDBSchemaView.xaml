<UserControl
    x:Class="Dash.CollectionDBSchemaView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dash"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance local:CollectionViewModel}"
    AllowDrop="True"
    mc:Ignorable="d"
                
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid x:Name="xOuterGrid" SizeChanged="xOuterGrid_SizeChanged" Loaded="xOuterGrid_Loaded" Background="#CCFFFFFF" ManipulationMode="All" >
        <Grid.RowDefinitions>
            <RowDefinition x:Name="xHeaderArea" Height="42"></RowDefinition>
            <RowDefinition x:Name="xDataArea" Height="*"></RowDefinition>
            <RowDefinition x:Name="xAddRowArea" Height="42"></RowDefinition>
        </Grid.RowDefinitions>
        <Border Visibility="Collapsed" x:Name="HeaderBorderThickness" BorderThickness="1" />
        <!--grid wrapping the headers for formatting-->
        <ListView x:Name="xHeaderView" x:FieldModifier="public" Grid.Row="0" 
                      CanDragItems="True"
                      CanReorderItems="True"
                      AllowDrop="True"
                      DragItemsStarting="xHeaderView_DragItemsStarting"
                      Style="{StaticResource xSchemaListView}" 
                      SelectionMode="{Binding ItemSelectionMode, Mode=OneWay}"
                      >
            <!--header list-->
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsStackPanel Orientation="Horizontal" Margin="0"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#20000000" BorderThickness="{Binding ElementName=HeaderBorderThickness,Path=BorderThickness}" CornerRadius="5" Background="Gray">
                        <local:CollectionDBSchemaHeader DataContext="{Binding}" Height="40"/>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!--records list-->
        <ListView x:Name="xRecordsView"  x:FieldModifier="public"  Style="{StaticResource xSchemaListView}"
                  Grid.Row="1" 
                  SelectionMode="Extended"
                  Background="{ThemeResource DBCollectionBrush}"
                  CanDragItems="True"
                  CanReorderItems="True"
                  AllowDrop="True"
                  Height="100"
                  ItemsSource="{x:Bind ColumnViewModels}"
                  SelectionChanged ="XRecordsView_OnSelectionChanged"
                  PointerPressed="xRecordsView_PointerPressed"  
                  Loaded="XRecordsView_OnLoaded"
                  DragItemsStarting="XRecordsView_OnDragItemsStarting">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsStackPanel Orientation="Horizontal" VerticalAlignment="Top" Height="Auto"  HorizontalAlignment="Left" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <local:CollectionDBSchemaColumn></local:CollectionDBSchemaColumn>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel HorizontalAlignment="Center" Grid.Row="2" Orientation="Horizontal">
            <Button HorizontalAlignment="Center" Tapped="AddRow_OnTapped" Margin="2" Width="200" Height="40">Add Row</Button>
            <Button HorizontalAlignment="Center" Tapped="AddColumn_OnTapped" Margin="2" Width="200" Height="40">Add Column</Button>
        </StackPanel>
        
    </Grid>
 
</UserControl>
