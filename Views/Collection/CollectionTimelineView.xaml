<local:SelectionElement
    x:Class="Dash.CollectionTimelineView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dash"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="700"
    Tapped="OnTapped"
    SizeChanged="CollectionTimelineView_OnSizeChanged" d:DataContext="{d:DesignInstance local:BaseCollectionViewModel}">

    <Grid>
        
        <!--background lines-->
        <Rectangle x:Name="xHorizontalLine" Height="3" Fill="LightGray" Margin="25, 0"></Rectangle>
        <Rectangle x:Name="xVerticalLineLeft" Height="35" Width="5"  Fill="LightGray" HorizontalAlignment="Left" Margin="25, 0"></Rectangle>
        <Rectangle x:Name="xVerticalLineRight" Height="35" Width="5" Fill="LightGray" HorizontalAlignment="Right" Margin="25, 0"></Rectangle>
        
        
        <ItemsControl x:Name="xItemsControl"
                      x:FieldModifier="public"
                      ItemsSource="{x:Bind _contextList}"   
                      IsHitTestVisible="{Binding IsSelected}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas x:Name="xCollectionCanvas"
                            x:FieldModifier="public"
                            Background="Transparent"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Stretch"
                    >
                    </Canvas>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:TimelineElement></local:TimelineElement>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </Grid>
</local:SelectionElement>
