<local:SelectionElement
    x:Class="Dash.CollectionFreeformView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dash"
    xmlns:dash="using:Dash"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xaml="using:Microsoft.Graphics.Canvas.UI.Xaml"
    mc:Ignorable="d"
    Background="Transparent"
    ManipulationMode="All" d:DataContext="{d:DesignInstance local:CollectionViewModel}"
    AllowDrop="True"
    Drop="CollectionViewOnDrop"
    DragEnter="CollectionViewOnDragEnter"
    Tapped="OnTapped"
    HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
    HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
    >

    <Grid x:Name="xOuterGrid" Background="White" ManipulationMode="All" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" DoubleTapped="OnDoubleTapped"
          SizeChanged="XOuterGrid_OnSizeChanged" >
        <Grid.Clip>
            <RectangleGeometry x:Name="xClippingRect" />
        </Grid.Clip>

        <xaml:CanvasControl x:Name="xBackgroundCanvas" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                            CreateResources="CanvasControl_OnCreateResources" Draw="CanvasControl_OnDraw" />
        <Border x:Name="xDarkenBackground" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Black" Opacity=".1"></Border>
        <Rectangle x:Name="XDropIndicationRectangle" Opacity="0.5" Fill="Transparent" Width="{Binding ElementName=xOuterGrid, Path=Width}" 
                   Height="{Binding ElementName=xOuterGrid, Path=Height}" IsHitTestVisible="False"></Rectangle>
        <Canvas x:Name="InkHostCanvas" VerticalAlignment="Top" HorizontalAlignment="Left"></Canvas>

        <ItemsControl x:Name="xItemsControl"
                      x:FieldModifier="public"
                      ItemsSource="{Binding DocumentViewModels}"   
                      IsHitTestVisible="{Binding IsSelected}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas x:Name="xCollectionCanvas"
                            x:FieldModifier="public"
                            Background="Transparent"
                            Width="0"
                            Height="0"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left"
                            >
                    </Canvas>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <dash:DocumentView
                        RenderTransform="{Binding GroupTransform, Converter={StaticResource TransformGroupDataToGroupTransformConverter}}"
                                       Loaded="DocumentViewOnLoaded" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </Grid>
</local:SelectionElement>