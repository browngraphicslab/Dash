<local:SelectionElement
    x:Class="Dash.CollectionPageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dash"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:localMicrosoft="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400" d:DataContext="{d:DesignInstance local:CollectionViewModel}"
    AllowDrop="True"    
    DragOver="xDocContainer_DragOver" 
    Drop="CollectionViewOnDrop"
    DragEnter="CollectionViewOnDragEnter"
    DragLeave="CollectionViewOnDragLeave"
    >
    <Grid x:Name="Grid" Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.Resources>
            <ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:localMicrosoft="using:Microsoft.Toolkit.Uwp.UI.Controls">

                <Style TargetType="localMicrosoft:GridSplitter">
                    <Setter Property="IsTabStop" Value="True"></Setter>
                    <Setter Property="UseSystemFocusVisuals" Value="True"></Setter>
                    <Setter Property="IsFocusEngagementEnabled" Value="True"></Setter>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="localMicrosoft:GridSplitter">
                                <Grid Background="{TemplateBinding Background}">
                                    <ContentPresenter Content="{TemplateBinding Element}" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" />
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>

            </ResourceDictionary>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="11"/>
            <ColumnDefinition MinWidth="50" Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="2" x:Name="xDocContainer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition>
                    
                </RowDefinition>
                <RowDefinition x:Name="xDocCaptionRow" Height="0">
                    
                </RowDefinition>
            </Grid.RowDefinitions>
            <local:DocumentView x:Name="xDocView" DataContext="{Binding CurPage}" Visibility="Collapsed" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            <Grid x:Name="xDockSpots" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="Collapsed" >
                <Button Content="- body -" HorizontalAlignment="Center" VerticalAlignment="Top"    Margin="0 10 0 0"  Width="50" Height="30" AllowDrop="True" Drop="Top_Drop"/>
                <Button Content="- footer -"    HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 0 0 10" Width="50" Height="30"  AllowDrop="True" Drop="Bottom_Drop"/>
            </Grid>
            <TextBox Name="xDocTitle" x:FieldModifier="public" Grid.Row="1" Width="200" Height="0" VerticalAlignment="Bottom"   HorizontalAlignment="Left" Visibility="Collapsed"></TextBox>
        </Grid>
        <localMicrosoft:GridSplitter GettingFocus="TextBlock_GettingFocus"
            x:Name="xSplitter"
            Grid.Column="1" Width="11" ResizeBehavior="BasedOnAlignment" VerticalAlignment="Stretch"
                ResizeDirection="Auto"
                Background="LightGray"
                Foreground="White" 
                FontSize="13">
            <localMicrosoft:GridSplitter.Element>
                <Grid GettingFocus="TextBlock_GettingFocus">
                    <TextBlock HorizontalAlignment="Center" 
                                   IsHitTestVisible="False"
                                   VerticalAlignment="Center"  
                                    GettingFocus="TextBlock_GettingFocus"
                                    Text="&#xE784;"
                                   Foreground="Black" 
                                   FontFamily="Segoe MDL2 Assets">
                    </TextBlock>
                </Grid>
            </localMicrosoft:GridSplitter.Element>
        </localMicrosoft:GridSplitter>
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!--StackPanel x:Name="xThumbs" Orientation="Horizontal" Grid.Row="0" Background="Black" VerticalAlignment="Stretch" /-->

            <ListView x:Name="xThumbs" 
                    Grid.Row="1" 
                      Loaded="xThumbs_Loaded"
                      DataContextChanged="xThumbs_DataContextChanged"
                    SelectionMode="Single"
                    VerticalAlignment="Stretch" 
                    SelectionChanged="xThumbs_SelectionChanged" 
                    ItemsSource="{Binding ThumbDocumentViewModels}"
                    ScrollViewer.VerticalScrollMode="Enabled"
                    ScrollViewer.VerticalScrollBarVisibility="Visible"
                    ScrollViewer.IsVerticalRailEnabled="True"
                      Tapped="xThumbs_Tapped"
                    ScrollViewer.HorizontalScrollMode="Disabled">
                <ListView.Resources>

                    <local:BoolToBrushConverter x:Key="BoolToBrushConverter"/>
                </ListView.Resources>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsStackPanel Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <local:DocumentView  IsHitTestVisible="False"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Grid Padding="0" Grid.Row="0" VerticalAlignment="Center" Height="35" x:Name="xDragContainer" Grid.Column="1" Background="LightGray"  Margin="-5 0 0 0" HorizontalAlignment="Stretch" CanDrag="True" DragStarting="xDragContainer_DragStarting" ManipulationMode="All" ManipulationStarted="xDrag_ManipulationStarted">
                <TextBlock Text="DragOut" HorizontalTextAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
            </Grid>
        </Grid>

    </Grid>
</local:SelectionElement>
