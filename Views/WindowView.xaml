<UserControl
    x:Class="Dash.WindowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Width="600" Height="400">

    <Canvas x:Name="XCanvas" HorizontalAlignment="Left" Height="400" VerticalAlignment="Top" Width="600">
        <Canvas.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <LinearGradientBrush.RelativeTransform>
                    <CompositeTransform CenterY="0.5" CenterX="0.5" Rotation="48.691"/>
                </LinearGradientBrush.RelativeTransform>
                <GradientStop Color="Red" Offset="0"/>
                <GradientStop Color="#FFAE00FF" Offset="1"/>
            </LinearGradientBrush>
        </Canvas.Background>
        <Border BorderBrush="Black" BorderThickness="1" Height="400" Width="600"/>
        <Rectangle Fill="#FFDCFF00" Height="36" Stroke="Black" Width="600" ManipulationDelta="Rectangle_ManipulationDelta"/>
        <Rectangle Fill="#FFE800FF" Height="36" Canvas.Left="564" Stroke="Black" Width="36" Tapped="Rectangle_Tapped"/>

    </Canvas>
</UserControl>
