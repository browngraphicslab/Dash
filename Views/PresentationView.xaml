<UserControl
    x:Class="Dash.PresentationView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dash"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dash="using:Dash"
    xmlns:system="using:System"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height ="30"/>
            <RowDefinition Height ="*"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Button x:Name="xClosePresentation"  Margin="270,0,0,0" Click="XClosePresentation_OnClick" Background="LightGray">
          <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8BB;" FontSize="9" Margin="5" />
        </Button>
        <StackPanel Grid.Row="1" Margin="0,-10,0,0" x:Name="xOuterStack" x:FieldModifier="public">
            <StackPanel.Resources>
                <Storyboard x:Name="xContentIn" x:FieldModifier="public">
                    <DoubleAnimation 
                        Storyboard.TargetName="xTransportControls"
                        Storyboard.TargetProperty="MinHeight"
                        To="60"
                        Duration="0:0:0.3"
                        EnableDependentAnimation="True"/>
                    <DoubleAnimation 
                        Storyboard.TargetName="xPinnedNodesListView"
                        Storyboard.TargetProperty="Opacity"
                        To="1"
                        Duration="0:0:0.5"
                        EnableDependentAnimation="True"/>
                    <DoubleAnimation 
                        Storyboard.TargetName="xNumberList"
                        Storyboard.TargetProperty="Opacity"
                        To="1"
                        Duration="0:0:0.5"
                        EnableDependentAnimation="True"/>
                    <DoubleAnimation 
                        Storyboard.TargetName="xPresentationTitle"
                        Storyboard.TargetProperty="Opacity"
                        To="1"
                        Duration="0:0:0.2"
                        EnableDependentAnimation="True"/>
                </Storyboard>
                <Storyboard x:Name="xContentOut" x:FieldModifier="public">
                    <DoubleAnimation 
                        Storyboard.TargetName="xTransportControls"
                        Storyboard.TargetProperty="Opacity"
                        To="0"
                        Duration="0:0:0.2"
                        EnableDependentAnimation="True"
                        Completed="Timeline_OnCompleted"/>
                    <DoubleAnimation 
                        Storyboard.TargetName="xPinnedNodesListView"
                        Storyboard.TargetProperty="Opacity"
                        To="0"
                        Duration="0:0:0.2"
                        EnableDependentAnimation="True"/>
                    <DoubleAnimation 
                        Storyboard.TargetName="xNumberList"
                        Storyboard.TargetProperty="Opacity"
                        To="0"
                        Duration="0:0:0.2"
                        EnableDependentAnimation="True"/>
                    <DoubleAnimation 
                        Storyboard.TargetName="xPresentationTitle"
                        Storyboard.TargetProperty="Opacity"
                        To="0"
                        Duration="0:0:0.2"
                        EnableDependentAnimation="True"/>
                </Storyboard>
                <Storyboard x:Name="xSettingsIn" x:FieldModifier="public">
                    <DoubleAnimation 
                        Storyboard.TargetName="xSettingsPanel"
                        Storyboard.TargetProperty="Opacity"
                        To="1"
                        Duration="0:0:0.4"
                        EnableDependentAnimation="True"/>
                </Storyboard>
                <Storyboard x:Name="xSettingsOut" x:FieldModifier="public">
                    <DoubleAnimation 
                        Storyboard.TargetName="xSettingsPanel"
                        Storyboard.TargetProperty="Opacity"
                        To="0"
                        Duration="0:0:0.2"
                        EnableDependentAnimation="True"/>
                </Storyboard>
            </StackPanel.Resources>
            <TextBlock x:Name="xPresentationTitle" Opacity="0"  TextAlignment="Center" Text="Presentation" FontSize="36" Padding="0, 0, 0, 30"/>
            <CommandBar x:Name="xTransportControls" Height="0"  Opacity="1" HorizontalAlignment="Center" Background="Transparent" Foreground="White" OverflowButtonVisibility="Collapsed" x:FieldModifier="public">

                <AppBarButton x:Name="BackButton" Icon="Back" Label="Back" Click="BackButton_Click" IsEnabled="False" Opacity="0.3" Width="50"/>
                <AppBarButton x:Name="PlayStopButton" Tag="play" Icon="Play" Label="Play" Click="PlayStopButton_Click" Width="50"/>
                <AppBarButton x:Name="NextButton" Icon="Forward" Label="Next" Click="NextButton_Click" IsEnabled="False" Opacity="0.3" Width="50"/>

            </CommandBar>
            <Grid Margin="0, 40, 0, 0" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ListView 
                    x:Name="xNumberList"
                    ItemsSource="{Binding PinNumbers}" 
                    SelectionMode="None" 
                    IsItemClickEnabled="False" 
                    Grid.Column="0"
                    Opacity="0">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="system:Int32">
                            <TextBlock Text="{x:Bind}" FontSize="20" Foreground="LightGray"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <ListView 
                    x:Name="xPinnedNodesListView" 
                    ItemsSource="{Binding PinnedNodes}" 
                    ReorderMode="Enabled" 
                    CanReorderItems="True"
                    AllowDrop="True" 
                    HorizontalAlignment="Stretch" 
                    Grid.Column="1" 
                    Opacity="0"
                    SelectionMode="None" 
                    IsItemClickEnabled="True" 
                    ItemClick="PinnedNode_Click" 
                    RightTapped="PinnedNodesListView_OnRightTapped">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.Resources>
                        <MenuFlyout x:Name="PinnedNodeFlyout" Closed="Flyout_Closed">
                            <MenuFlyout.Items>
                                <MenuFlyoutItem x:Name="Edit" Text="Edit Name" Click="Edit_OnClick"/>
                                <MenuFlyoutItem x:Name="Reset" Text="Reset Name" Click="Reset_OnClick"/>
                            </MenuFlyout.Items>
                        </MenuFlyout>
                    </ListView.Resources>
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="dash:DocumentController">
                            <Grid HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="30"/>
                                </Grid.ColumnDefinitions>
                                <local:PresentationViewTextBox FontSize="16" Grid.Column="0" HorizontalAlignment="Stretch"/>
                                <Button Tag="{Binding}" Click="DeletePin" HorizontalAlignment="Stretch" Background="Transparent" Opacity="0.3" Grid.Column="1">
                                    <SymbolIcon Symbol="Delete"/>
                                    </Button>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </StackPanel>
        <StackPanel x:Name="xSettingsPanel" Opacity="0" HorizontalAlignment="Center" Background="Transparent" Orientation="Horizontal" Grid.Row="2">
            <AppBarButton x:Name="ResetButton" Icon="Zoom" Label="Re-Focus" Click="ResetButton_Click" IsEnabled="False" Opacity="0.3" IsCompact="False" Margin="10"/>
            <AppBarToggleButton Icon="RepeatAll" Label="Loop" Checked="RepeatButton_OnChecked" Unchecked="RepeatButton_OnUnchecked" Margin="0,10,0,0"/>
            <AppBarButton x:Name="ShowLinesButton" Icon="Go" Label="Show Lines" IsEnabled="True" IsCompact="False" Margin="10" Click="ShowLinesButton_OnClick" Background="White" Foreground="Black" x:FieldModifier="public"/>
        </StackPanel>
    </Grid>
</UserControl>
