<UserControl
    x:Class="Dash.OverlayMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dash="using:Dash"
    xmlns:docmenu="using:Dash.Views.Document_Menu"
    mc:Ignorable="d"
    d:DesignHeight="400"
    d:DesignWidth="400"
    x:Name="xOverlayMenu">

    <Grid>
        <StackPanel x:Name="xCollectionButtonsStackPanel" HorizontalAlignment="Left"
                    Margin="{Binding ElementName=xDocumentButtonsStackPanel, Path=Margin}"
                    Width="{Binding ElementName=xDocumentButtonsStackPanel, Path=Width}">
        </StackPanel>
            <StackPanel x:Name="xDocumentButtonsStackPanel" MinWidth="30" HorizontalAlignment="Left" Orientation="Vertical" Margin="0,0,0,0">
        </StackPanel>
    </Grid>
</UserControl>
