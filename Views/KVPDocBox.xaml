<UserControl
    x:Class="Dash.KVPDocBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dash"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid x:Name="xDocBoxContainer" Margin="4 4 4 4" Padding ="0" Height="28" Width="Auto" BorderThickness="0" Background="{StaticResource DashDarkDarkBlueBrush}">
        <StackPanel Orientation="Horizontal">

            <Grid x:Name="xIcon" Width="Auto" Background="Transparent" PointerEntered="DeleteButton_PointerEntered" PointerExited="DeleteButton_PointerExited" Tapped="DeleteButton_Tapped" Margin="8 0 8 0">
                <TextBlock x:Name="xDeleteIcon" Visibility="Collapsed"  Text="&#xE711;" FontSize="10"  FontFamily="Segoe MDL2 Assets"  Foreground="White" Margin="-11 2 -10 0"/>
            </Grid>
            <Grid>
                <TextBlock x:Name="xText" Foreground="White" FontSize="13" Padding="0 4 6 6" HorizontalAlignment="Right"
                ></TextBlock>
            </Grid>
            
        </StackPanel>


    </Grid>
</UserControl>
