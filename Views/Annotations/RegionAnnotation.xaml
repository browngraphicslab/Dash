<local:AnchorableAnnotation
    x:Class="Dash.RegionAnnotation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dash"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dash="using:Dash"
    mc:Ignorable="d"
    >

    <Rectangle x:Name="XRegionRect" StrokeDashArray="2" StrokeThickness="2" Stroke="Black"
               Fill="{x:Bind ParentOverlay.XPreviewRect.Fill}" Opacity="{x:Bind ParentOverlay.XPreviewRect.Opacity}" />
</local:AnchorableAnnotation>

