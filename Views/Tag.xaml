<UserControl
    x:Class="Dash.Tag"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dash"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid x:Name="xTagContainer" Margin="5" Padding ="0" Height="Auto" Width="Auto" BorderThickness="2" BorderBrush="Transparent" Tapped="XTagContainer_OnTapped">
        <TextBlock x:Name="xTagText" Foreground="White"></TextBlock>
    </Grid>
</UserControl>
