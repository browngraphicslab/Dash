<UserControl
    x:Class="Dash.Views.Document_Menu.AddMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dash.Views.Document_Menu"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

        <ScrollViewer Height="700">
        <StackPanel x:Name="xAddMenuContainer" Orientation="Vertical">
            <local:TreeMenuNode HeaderIcon="{StaticResource FavoriteIcon}" HeaderLabel="Favourites"></local:TreeMenuNode>
            <local:TreeMenuNode x:Name="xOperatorTree" HeaderIcon="{StaticResource OperatorIcon}" HeaderLabel="Operators"></local:TreeMenuNode>
            <local:TreeMenuNode x:Name="xDocumentTree" HeaderIcon="{StaticResource DocumentPlainIcon}" HeaderLabel="Documents"></local:TreeMenuNode>
            </StackPanel>
        </ScrollViewer>
</UserControl>
