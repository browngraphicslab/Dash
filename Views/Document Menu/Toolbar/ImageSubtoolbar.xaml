<UserControl
    x:Class="Dash.ImageSubtoolbar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dash"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="500"
    d:DesignWidth="400">

    <Grid>
        <CommandBar x:Name="xImageCommandbar" IsOpen="True" OverflowButtonVisibility="Collapsed" IsSticky="True" Closing="CommandBar_Closing">
            <CommandBar.Content>
                <ComboBox x:Name="SizeCombo" SelectedIndex="0" Margin="10" Height="35" Width="150" RenderTransformOrigin="0.622,1.119">
                    <ComboBoxItem Content="Scale to Size"/>
                    <ComboBoxItem Content="Stretch"/>
                    <ComboBoxItem Content="Clipped"/>
                    <ComboBoxItem Content="SmartFit"/>
                </ComboBox>
            </CommandBar.Content>
            
            <AppBarButton Icon="Crop" Label="Crop" Click="Crop_Click"/>
            <AppBarButton Icon="Pictures" Label="Replace" Click="Replace_Click"/>
        </CommandBar>
    </Grid>
</UserControl>
