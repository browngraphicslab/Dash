<UserControl
    x:Class="Dash.TextSubtoolbar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dash"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:buttons="using:Microsoft.Toolkit.Uwp.UI.Controls.TextToolbarButtons"
    xmlns:common="using:Microsoft.Toolkit.Uwp.UI.Controls.TextToolbarButtons.Common"
    xmlns:textToolbarFormats="using:Microsoft.Toolkit.Uwp.UI.Controls.TextToolbarFormats"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
       
        <controls:TextToolbar
            x:Name="xDashTextSubtoolbar"
            Visibility="Visible">
            <!--remove Link button from default text toolbar-->
            <controls:TextToolbar.ButtonModifications>
                <buttons:DefaultButton Type="Link" IsVisible="False"/>
            </controls:TextToolbar.ButtonModifications>
        </controls:TextToolbar>
        

    </Grid>
</UserControl>
