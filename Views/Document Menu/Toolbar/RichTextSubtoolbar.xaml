<UserControl
    x:Class="Dash.RichTextSubtoolbar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dash"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:buttons="using:Microsoft.Toolkit.Uwp.UI.Controls.TextToolbarButtons"
    xmlns:media="using:Syncfusion.UI.Xaml.Controls.Media"
    xmlns:format="Microsoft.Toolkit.Uwp.UI.Controls.TextToolbarFormats"
    xmlns:textToolbarFormats="using:Microsoft.Toolkit.Uwp.UI.Controls.TextToolbarFormats"
    xmlns:tsTypes="using:Zu.TypeScript.TsTypes"

    d:DesignHeight="300"
    d:DesignWidth="960">

  

    <Grid x:Name="xStack" Height="50">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <controls:TextToolbar 
            x:Name="xDashTextSubtoolbar"
            Visibility="Visible"
            Background="LightGray"
            Grid.Column="0">
            <!--remove Link button from default text toolbar-->
            <controls:TextToolbar.ButtonModifications >
                <buttons:DefaultButton Type="Link" IsVisible="False" />
            </controls:TextToolbar.ButtonModifications>

        </controls:TextToolbar>
        <Grid Grid.Column="1" 
                Background="LightGray">
            <Slider x:Name="xOpacitySlider" 
                            Minimum="0" 
                            Maximum="255"
                            TickFrequency="1" 
                            StepFrequency="1" 
                            SnapsTo="StepValues" 
                            TickPlacement="None"  
                            IntermediateValue="128" 
                            Margin="22, 11, 0, 0" 
                    
                            RightTapped="XOpacitySlider_OnRightTapped"  
                            ValueChanged="XOpacitySlider_OnValueChanged"/>
        </Grid>
        <AppBarButton x:Name="xFontColor" Label="Color" Grid.Column="2" 
            Background="LightGray" Height="50">
        <Button.Flyout>
                <Flyout>
                    <media:SfColorPicker  x:Name="xBackgroundColorPicker"  PointerReleased="XBackgroundColorPicker_OnPointerReleased"/>
                </Flyout>
            </Button.Flyout>
            <Image Source="ms-appx:///Assets/GroupColorIcon.png"/>

        </AppBarButton>

    </Grid>
</UserControl>
