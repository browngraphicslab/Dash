<local:WindowTemplate
    x:Class="Dash.CSVImportHelper"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dash"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="350"
    d:DesignWidth="400" d:DataContext="{d:DesignInstance local:CsvImportHelperViewModel}"
    >
    
    <local:WindowTemplate.InnerContent>
        <Grid Background="{StaticResource DocumentBackground}" MinWidth="400">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!--grid view containing headers-->
            <TextBlock Grid.Row="0">Headers</TextBlock>
            <ListView Grid.Row="1" x:Name="xHeaderGrid" ItemsSource="{Binding Headers}" ShowsScrollingPlaceholders="False" SelectionMode="Extended" Background="{StaticResource DocumentBackgroundOpaque}"
                  CanDragItems="True" AllowDrop="True" DragItemsStarting="XHeaderGridOnDragItemsStarting" Drop="XHeaderGrid_OnDrop" DragItemsCompleted="XHeaderGrid_OnDragItemsCompleted" DragOver="XHeaderGrid_OnDragOver">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#20000000"
                            BorderThickness="2"
                            CornerRadius="5" Background="Gray">
                            <TextBlock Text="{Binding}"/>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--list of all the doc type to header mappings-->
            <TextBlock Grid.Row="2">Document Types</TextBlock>
            <ListView Grid.Row="3" x:Name="xDocTypeList" ItemsSource="{Binding DocumentTypeMaps}" Background="{StaticResource DocumentBackgroundOpaque}" AllowDrop="True">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid d:DataContext="{d:DesignInstance local:DocumentTypeToColumnMapViewModel}" AllowDrop="True">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <!--the document type-->
                            <Border BorderBrush="#20000000"
                                BorderThickness="2"
                                CornerRadius="5" Background="{StaticResource DocumentHighlightBackground}" VerticalAlignment="Center">
                                <TextBlock Text="{Binding DocumentType.Type}" Margin="4"/>
                            </Border>
                            <!--the list of headers associated with that document type-->
                            <ListView Grid.Column="1" ItemsSource="{Binding Headers}" ShowsScrollingPlaceholders="False" SelectionMode="Extended" Background="{StaticResource DocumentBackgroundOpaque}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                  CanDragItems="True" AllowDrop="True" DragItemsStarting="XHeaderGridOnDragItemsStarting" Drop="XHeaderGrid_OnDrop" DragItemsCompleted="XHeaderGrid_OnDragItemsCompleted" DragOver="XHeaderGrid_OnDragOver">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#20000000"
                                            BorderThickness="2"
                                            CornerRadius="5" Background="Gray">
                                            <TextBlock Text="{Binding}"/>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--the add new document type ui-->
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <!--add new doc type button-->
                <Button x:Name="xAddNewDocTypeButton" Grid.ColumnSpan="3" Background="{StaticResource WindowsBlue}" 
                    HorizontalAlignment="Stretch" FontSize="23" Visibility="Visible"
                    Tapped="XAddNewDocTypeButton_OnTapped">+ Doc Type</Button>
                <!--new doctype textbox-->
                <TextBox x:Name="xNewDocTypeTextBox" Grid.Column="0" PlaceholderText="Enter a new document type" Visibility="Collapsed"
                     KeyDown="XNewDocTypeTextBox_OnKeyDown"></TextBox>
                <!--accept new doc type buttton-->
                <Button x:Name="xYesNewDocTypeButton" Grid.Column="1" Background="{StaticResource WindowsBlue}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="23" Visibility="Collapsed"
                    Tapped="XYesNewDocTypeButton_OnTapped">
                    <SymbolIcon Symbol="Accept"></SymbolIcon>
                </Button>
                <!--cancel new doc type button-->
                <Button x:Name="xCancelNewDocTypeButton" Grid.Column="2" Background="{StaticResource WindowsBlue}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="23" Visibility="Collapsed"
                    Tapped="XCancelNewDocTypeButton_OnTapped">
                    <SymbolIcon Symbol="Cancel"></SymbolIcon>
                </Button>
            </Grid>

        </Grid>
    </local:WindowTemplate.InnerContent>

</local:WindowTemplate>