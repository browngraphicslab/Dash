<local:SelectionElement
    x:Class="Dash.CollectionDBSchemaView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dash"
    xmlns:localView="using:Dash.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance local:CollectionViewModel}"
    mc:Ignorable="d"
    d:DesignHeight="300"
    Tapped="OnTapped"
    d:DesignWidth="400">

    <Grid VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <GridView x:Name="xGridView" Grid.Row="0"
                  VirtualizingStackPanel.VirtualizationMode="Standard"
                  CanDragItems="{Binding CanDragItems}"
                  SelectionMode="{Binding ItemSelectionMode, Mode=OneWay}"
                  Style="{StaticResource xCollectionGridViewStyle}"
                  ShowsScrollingPlaceholders="False">
            <GridView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#20000000" BorderThickness="1" CornerRadius="5" Background="Gray">
                        <TextBlock FontSize="12" Foreground="Black" Text="{Binding}" FontWeight="{Binding Converter={StaticResource BoolToBoldConverter}}" Width="70" Height="25" Tapped="TextBlock_Tapped" />
                    </Border>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        <ListView x:Name="xRecordsView"
                  VirtualizingStackPanel.VirtualizationMode="Standard"
                  Grid.Row="1"
                  HorizontalAlignment="Stretch"
                  ShowsScrollingPlaceholders="False">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="Margin" Value="0,0,0,0" />
                    <Setter Property="Padding" Value="0,0,0,0" />
                    <Setter Property="MinHeight" Value="20" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#20000000" BorderThickness="0.5">
                        <localView:CollectionDBSchemaRecord HorizontalAlignment="Stretch" Height="25"/>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</local:SelectionElement>
