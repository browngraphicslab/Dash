<UserControl
    x:Class="Dash.OperatorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dash"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400" DataContextChanged="OnUserControlDataContextChanged" RightTapped="OnRightTapped"
    x:Name="OpView">

    <Grid>
        <!-- Makes the blue background shape-->

        <Border VerticalAlignment="Top" Grid.ColumnSpan="3" BorderThickness="0,0,0,1" >
            <TextBlock x:Name="xTitle" Foreground ="DarkSlateGray" Style="{StaticResource xTitleStyle}" Padding="10,10,5,0" HorizontalAlignment="Center">Operator</TextBlock>
        </Border>
        <!-- Content containing grid -->
        <Grid x:Name="XGrid" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="50"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="Auto" MinWidth="50"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <!--Inner Content-->
            <Border Grid.Column="1">
                <ContentPresenter x:Name="xOpContentPresenter" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" />
            </Border>

            <!-- Input Operator Handles & Labels-->
            <ListView x:Name="InputListView" Grid.Column="0" ScrollViewer.VerticalScrollMode="Disabled" MinWidth="50"
                      ScrollViewer.HorizontalScrollMode="Disabled" SelectionMode="None" VerticalAlignment="Center">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0,-5"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="5,0" VerticalAlignment="Center" Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Foreground="DarkSlateGray" Text="{Binding Key.Name}" Padding="10,0,10,0" Grid.Column="1" VerticalAlignment="Center"/>
                            <Ellipse Style="{StaticResource xInputLinkHandle}" Grid.Column="0" PointerPressed="InputEllipseOnPointerPressed" Loaded="InputEllipse_Loaded" 
                                     PointerReleased="InputEllipse_OnPointerReleased"  ManipulationStarted="Ellipse_ManipulationStarted"
                                     DragEnter="UIElement_OnDragEnter" Drop="UIElement_OnDrop"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ListView>

            <!-- Output link handles and labels -->
            <ListView x:Name="OutputListView" Grid.Column="2" ScrollViewer.VerticalScrollMode="Disabled" MinWidth="50" 
                      ScrollViewer.HorizontalScrollMode="Disabled" SelectionMode="None" VerticalAlignment="Center" >
                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0,-5"/>
                        <Setter Property="HorizontalContentAlignment" Value="Right"/>
                    </Style>
                </ItemsControl.ItemContainerStyle>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Padding="0,5,0,0" VerticalAlignment="Center">
                            <TextBlock Foreground="DarkSlateGray" Text="{Binding Key.Name}" Padding="10,0,10,0" TextAlignment="Left"/>
                            <Ellipse x:Name="OutputEllipse" Style="{StaticResource xOutputLinkHandle}" PointerPressed="OutputEllipseOnPointerPressed" Loaded="OutputEllipse_Loaded" 
                                     PointerReleased="OutputEllipse_OnPointerReleased" ManipulationStarted="Ellipse_ManipulationStarted">
                                <ToolTipService.ToolTip>
                                    <local:FieldPreview Loading="FieldPreview_OnLoading"></local:FieldPreview>
                                </ToolTipService.ToolTip>
                            </Ellipse>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</UserControl>