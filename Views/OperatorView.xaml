<UserControl
    x:Class="Dash.OperatorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dash"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400" DataContextChanged="UserControl_DataContextChanged" >

    <Grid SizeChanged="Grid_SizeChanged" Padding="0,0,12,0">
        <!-- Makes the blue background shape-->
        <Border x:Name="xBackgroundBorder" Margin="0,0,150,0" Background="{StaticResource WindowsBlue}">
        </Border>
        <Viewbox x:Name="xViewbox" Stretch="Uniform" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            HorizontalAlignment="Right"
            VerticalAlignment="Center">
            <Canvas  Width="55" Height="110">
                <Path Fill="{StaticResource WindowsBlue}" StrokeThickness="1" >
                    <Path.Data>
                        <PathGeometry>
                            <PathGeometry.Figures>
                                <PathFigure StartPoint="0,0" >
                                    <PathFigure.Segments>
                                        <ArcSegment Size="10,10" RotationAngle="45" IsLargeArc="True" SweepDirection="Clockwise" Point="0,110"/>
                                        <LineSegment Point="0,0"></LineSegment>
                                    </PathFigure.Segments>
                                </PathFigure >
                            </PathGeometry.Figures>
                        </PathGeometry>
                    </Path.Data>
                </Path>
            </Canvas>
        </Viewbox>
        
        <!-- Content containing grid-->
        <Grid x:Name="XGrid" Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <ListView x:Name="InputListView" Grid.Column="0" SelectionMode="None">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBlock Foreground="White" Text="{Binding Key.Name}" Padding="10,0,10,0" Grid.Column="1"></TextBlock>
                            <!-- This is the draggable node handle -->
                            <Ellipse Width="20" Height="20"  Fill="{StaticResource AccentGreen}" Grid.Column="0" 
                                 PointerPressed="InputEllipse_OnPointerExited" PointerReleased="InputEllipse_OnPointerReleased" ManipulationMode="All" ManipulationStarted="Ellipse_ManipulationStarted"></Ellipse>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ListView>
            <ListView x:Name="OutputListView" Grid.Column="2" SelectionMode="None" VerticalAlignment="Center" Margin="0,0,-23,0" >
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBlock Foreground="White" Text="{Binding Key.Name}" Padding="10,0,10,0"  Grid.Column="0" VerticalAlignment="Center"></TextBlock>
                            <Ellipse Width="20" Height="20" Fill="{StaticResource AccentGreen}" Grid.Column="1" 
                                 PointerPressed="OutputEllipse_OnPointerExited" PointerReleased="OutputEllipse_OnPointerReleased" ManipulationMode="All" ManipulationStarted="Ellipse_ManipulationStarted"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</UserControl>