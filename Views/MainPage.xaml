<Page
    x:Class="Dash.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dash"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:Dash"
    mc:Ignorable="d">

    <Grid x:Name="MyGrid" SizeChanged="MyGrid_SizeChanged" >
        <Viewbox x:Name="xViewBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
            <views:DocumentView AllowDrop="True" Drop="XCanvas_Drop" DragOver="XCanvas_DragOver_1" x:Name="MainDocView" Width="500" Height="500"></views:DocumentView>
        </Viewbox>
        <local:OverlayCanvas x:Name="xOverlayCanvas"></local:OverlayCanvas>
    </Grid>
</Page>
