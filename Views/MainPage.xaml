<Page
    x:Class="Dash.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dash"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:Dash"
    mc:Ignorable="d">

    <Grid x:Name="MyGrid" SizeChanged="MyGrid_SizeChanged" Margin="0,0,-50,0">
        <views:DocumentView x:Name="MainDocView"  x:FieldModifier="public"/>

        <Canvas x:Name="xCanvas" x:FieldModifier="public" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"></Canvas>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Left" Background="{StaticResource WindowsBlue}">
            <Button Tapped="TwitterTestButtonOnTapped" HorizontalAlignment="Left" VerticalAlignment="Center" >TWITTER TEST</Button>
            <Button Tapped="TestEnvOnButtonTapped" HorizontalAlignment="Left" VerticalAlignment="Center" >TEST ENV</Button>
            <Button Tapped="UIElementTest" HorizontalAlignment="Left" VerticalAlignment="Center" >UIELEMENT TEST</Button>
            <TextBlock TextAlignment="Center" Foreground="White">--drag--</TextBlock>
            <TextBlock DragStarting="DocumentTest_OnDragStarting" CanDrag="True" Foreground="White">DOC TEST</TextBlock>
            <TextBlock DragStarting="CollectionTest_OnDragStarting" CanDrag="True" Text="COL TEST" Foreground="White"/>
            <TextBlock DragStarting="NotesTest_OnDragStarting" CanDrag="True" Text="NOTES TEST" Foreground="White"/>
        </StackPanel>
        
        
        <!-- Document Options Menu -->
        <Grid Margin="0,0,-5,0" HorizontalAlignment="Right">
            <Grid.RenderTransform>
                <CompositeTransform x:Name="xMenuCanvasTransform" TranslateX="0"/>
            </Grid.RenderTransform>
        <StackPanel x:Name="xRightSideMenu" Orientation="Horizontal" HorizontalAlignment="Right">
            <StackPanel.Resources>

                <!-- Animate background color -->
                <Storyboard x:Name="slideIn">
                    <DoubleAnimation Storyboard.TargetName="xMenuCanvasTransform" Storyboard.TargetProperty="TranslateX"
                         To="0" Duration="0:0:0.075"/>
                </Storyboard>
                <Storyboard x:Name="slideOut">
                    <DoubleAnimation Storyboard.TargetName="xMenuCanvasTransform" Storyboard.TargetProperty="TranslateX"
                         To="-55" Duration="0:0:0.075"/>
                </Storyboard>
            </StackPanel.Resources>
            <Border Tapped="Border_Tapped" HorizontalAlignment="Right" Padding="8,15" VerticalAlignment="Center" Background="#FF303030">
                <Image Source="ms-appx:///Assets/docmenu.png" Stretch="None" Opacity=".55"></Image>
            </Border>
            <ScrollViewer x:Name="xMenuCanvas" RelativePanel.AlignVerticalCenterWithPanel="True" Width="55" Margin="0" Padding="0" Background="#CC0850A0"  HorizontalAlignment="Right"  VerticalAlignment="Center" HorizontalScrollMode="Disabled" VerticalScrollMode="Enabled" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled" RenderTransformOrigin="0.5,0.5">
            </ScrollViewer>
        </StackPanel>
            <TextBlock Padding="0" Margin="23,0,0,0" Foreground="#FF303030" FontFamily="Arial" HorizontalAlignment="Left" VerticalAlignment="Center" RenderTransformOrigin="0,0.5">
                <TextBlock.RenderTransform>
                    <CompositeTransform ScaleX="0.6"/>
                </TextBlock.RenderTransform>&#x25b6;</TextBlock>
        </Grid>
    </Grid>
</Page>
