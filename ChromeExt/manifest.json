{
  "manifest_version": 2,

  "name": "Dash",
  "description": "Keep track of your webpages and google suite with Dash!",
  "version": "1.0",

  "browser_action": {
    "default_icon": "dash_logo.png",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "*.png",
    "*.html",
    "*.css",
    "*.svg"
  ],
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "keylistener.js", "popup.js" ]
    }
  ],

  "content_security_policy": "script-src 'self' https://apis.google.com/js/api.js; object-src 'self'",

  "background": {
    "scripts": [ "jquery.js", "tabManager.js", "requestHandler.js", "bg.js" ]
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "https://ajax.googleapis.com/",
    "http://*/",
    "https://*/",
    "*://*/",
    "<all_urls>"
  ]
}