<UserControl
    x:Class="Dash.EditableImage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="xCanvas"
    mc:Ignorable="d"
    LostFocus="EditableImage_OnLostFocus"
    KeyDown="XGrid_OnKeyDown"
    Background="Beige" IsTabStop="True">

    <Grid x:Name="xGrid" PointerMoved="OnPointerMoved" PointerReleased="OnPointerReleased"
          PointerPressed="OnPointerPressed">
        <Image x:Name="xImage" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="UniformToFill"
               Width="500" Source="{x:Bind ImageSource}" CacheMode="BitmapCache" />
        <Rectangle x:Name="xRegionPreview" Fill="AntiqueWhite" Opacity="0.6" StrokeThickness="1" Stroke="SaddleBrown" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>
    </Grid>


</UserControl>