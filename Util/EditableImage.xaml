<UserControl
    x:Class="Dash.EditableImage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dash="using:Dash"
    xmlns:views="using:Dash.Views"
    x:Name="xCanvas"
    mc:Ignorable="d"
    LostFocus="EditableImage_OnLostFocus"
   
    KeyDown="XGrid_OnKeyDown"
    Background="Beige" IsTabStop="True">


    <Grid x:Name="xGrid" PointerPressed="OnPointerPressed" PointerMoved="OnPointerMoved" PointerReleased="OnPointerReleased">
        <Image x:Name="xImage" VerticalAlignment="Center" HorizontalAlignment="Center"  Stretch="Fill" CacheMode="BitmapCache" />
        <Viewbox Stretch="Fill" x:Name="AnnotationViewbox">
            <Grid x:Name="XAnnotationGrid" />
        </Viewbox>
        <!--<StackPanel x:Name="xLinkStack" Visibility="Collapsed"/>-->
        <FlyoutBase.AttachedFlyout>
            <MenuFlyout x:Name="xLinkFlyout"/>
        </FlyoutBase.AttachedFlyout>


    </Grid>
</UserControl>