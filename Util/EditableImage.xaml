<UserControl
    x:Class="Dash.EditableImage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="xCanvas"
    mc:Ignorable="d" >

    <!--image-->
    <Canvas PointerMoved="Canvas_PointerMoved" PointerReleased="Canvas_PointerReleased" PointerPressed="Canvas_PointerPressed">
        <Image x:Name="xImage" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center" CacheMode="BitmapCache"/>
        <Rectangle x:Name="xRect" StrokeThickness="4" Stroke="#FFEA18A7" Visibility="Collapsed"></Rectangle>
    </Canvas>
    
</UserControl>
