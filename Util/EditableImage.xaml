<UserControl
    x:Class="Dash.EditableImage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="xCanvas"
    mc:Ignorable="d"
    LostFocus="EditableImage_OnLostFocus"
   
    KeyDown="XGrid_OnKeyDown"
    Background="Beige" IsTabStop="True">

    <Grid x:Name="xGrid" PointerMoved="StopImageFromMoving" PointerReleased="StopImageFromMoving"
          PointerPressed="StopImageFromMoving">
        <Image x:Name="xImage" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="Uniform" CacheMode="BitmapCache" />
    </Grid>


</UserControl>