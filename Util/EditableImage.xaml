<UserControl
    x:Class="Dash.EditableImage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dash="using:Dash"
    x:Name="xCanvas"
    mc:Ignorable="d"
    LostFocus="EditableImage_OnLostFocus"
    KeyDown="XGrid_OnKeyDown"
    Background="Beige" IsTabStop="True">

    <Grid x:Name="xGrid" PointerMoved="OnPointerMoved" PointerReleased="OnPointerReleased"
          PointerPressed="OnPointerPressed" Loaded="OnLoaded">
        <Image x:Name="xImage" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="Uniform" CacheMode="BitmapCache" />
        <Grid x:Name="xRegionsGrid" x:FieldModifier="public"/>
        <dash:ImageRegionBox x:Name="xRegionPostManipulationPreview" Visibility="Collapsed" />
        <Rectangle x:Name="xRegionDuringManipulationPreview" Fill="AntiqueWhite" Opacity="0.4" StrokeThickness="2" Stroke="SaddleBrown" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>
    </Grid>


</UserControl>